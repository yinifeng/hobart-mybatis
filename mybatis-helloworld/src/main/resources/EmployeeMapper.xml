<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hobart.mybatis.mapper.EmployeeMapper">
<!-- 
namespace:名称空间;指定为接口的全类名
id：唯一标识
resultType：返回值类型
#{id}：从传递过来的参数中取出id值

public Employee getEmpById(Integer id);
 -->
    <select id="selectEmp" resultType="com.hobart.mybatis.model.Employee">
        <!--select * from t_hb_employee where id = #{id}-->
        select id,last_name lastName,age,gender,email,salary,create_time createTime 
        from t_hb_employee where id = #{id}
    </select>
</mapper>